{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react-jsx",
    "preserveConstEnums": true,
    "outFile": "../../built/local/tsc.js",
    "sourceMap": true,
    "esModuleInterop": true,
    },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}